<div class="container mt-4" style="max-width: 600px;">
    <h2 class="text-center">Editar Categoria</h2>
    <form action="/categorias/edit/{{categoria._id}}" method="POST">
        <div class="form-group">
            <label for="id_categoria">ID Categoria</label>
            <input type="text" class="form-control" id="id_categoria" name="id_categoria" value="{{categoria.id_categoria}}" readonly>
        </div>
        <div class="form-group">
            <label for="nombre_categoria">Nombre de categoria</label>
            <input type="text" class="form-control" id="nombre_categoria" name="nombre_categoria" value="{{categoria.nombre_categoria}}" required>
        </div>
        <div class="form-group">
            <label for="descripcion">Descripcion</label>
            <input type="text" class="form-control" id="descripcion" name="descripcion" value="{{categoria.descripcion}}" required>
        </div>
        <button type="submit" class="btn btn-primary">Actualizar</button>
    </form>
</div>
